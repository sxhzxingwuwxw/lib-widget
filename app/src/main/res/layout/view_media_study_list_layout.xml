<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD7D7D7"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFBFBFB">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="开篇介绍"
            android:textColor="#FF282828"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.android.lib.weici.widget.ExpandIconView
            android:id="@+id/left_arrow"
            style="@style/ExpandTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            app:eiv_animationDuration="300"
            app:eiv_color="#FF696969"
            app:eiv_colorLess="#FF696969"
            app:eiv_colorMore="#FF696969"
            app:eiv_height="15dp"
            app:eiv_roundedCorners="false"
            app:eiv_switchColor="true"
            app:eiv_width="15dp" />

    </RelativeLayout>
    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#D7D7D7"/>
    <LinearLayout
        android:id="@+id/child_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>