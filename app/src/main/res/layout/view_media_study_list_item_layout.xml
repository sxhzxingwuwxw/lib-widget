<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lib_media_item_selector"
    android:paddingTop="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="欢迎来到Victor English"
        android:textColor="#373737"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_title_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:text="欢迎来到Victor English"
        android:textColor="#6F6F6F"
        android:textSize="12dp"
        android:textStyle="bold" />

    <!--<TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title_sub"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="15dp"
        android:text="欢迎来到Victor English"
        android:textColor="#FF8C8C8C"
        android:textSize="12dp" />-->

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:text="欢迎来到Victor English"
        android:textColor="#00B400"
        android:textSize="13dp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFD7D7D7" />

    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#FFD7D7D7"
        android:layout_marginTop="15dp"
        android:visibility="gone" />
</LinearLayout>